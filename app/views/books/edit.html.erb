<div class='container'>
  <div class='col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto'>
    <h1>Editing Book</h1>
    <% if @book.errors.any? %>
    <div id='error_explanation'>
      <h3><%= @book.errors.count %> error<% if @book.errors.count > 1 %>s<% end %> prohibited this obj from being saved:</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <%= form_with model: @book,url: book_path(params[:id]), method: :patch do |f| %>
    <div class='form-group'>
      <%= f.label :title, for: 'book_title' %>
      <%= f.text_field :title, id: 'book_title', class: 'form-control book_title', value: @book.title %>
    </div>
    <div class='form-group'>
      <%= f.label :opinion, for: 'book_opinion' %>
      <%= f.text_area :body, id: 'book_opinion', class: 'form-control book_body', value: @book.body %>
    </div>
    <div class='form-group'>
      <%= f.submit 'Update Book', class: 'btn btn-success' %>
    </div>
    <% end %>
    <%= link_to 'Show', book_path(params[:id]), class: "book_#{params[:id]}" %>
    |
    <%= link_to 'Back', books_path %>
  </div>
</div>